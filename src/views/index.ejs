<%- include("partials/head.ejs")%>
<%- include("partials/nav.ejs")%>

<main>
    <h1> <%= about %> </h1>
    <hr>
    <div id="contenedor-productos">

        <!-- Vamos a iterar el array de productos que le pasamos desde el endpoint -->
        <% products.forEach(prod => { %>
            <div class="card-producto">
                <img src="<%= prod.imagen %>" alt="<%= prod.nombre %>">
                <h5><%= prod.nombre %></h5>
                <p>Id: <%= prod.id %></p>
                <p>$<%= prod.precio.toLocaleString("es-AR") %></p>

                <% if (prod.activo == 0) { %>
                    <button class="btn-actualizar" data-id="<%= prod.id %>">Activar</button>
                <% } %>
            </div>
        <% }) %>

    </div>
</main>

<script src="/js/activar.js"></script>

<%- include("partials/footer.ejs") %>